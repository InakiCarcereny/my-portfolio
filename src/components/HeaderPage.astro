---
import PersonalIcon from '@/icons/PersonalIcon.astro'
import MoonIcon from '@/icons/MoonIcon.astro'
---

<header class="flex items-center justify-between h-[80px] w-full">
  <a href="/" class="mx-2 px-2 py-2 hover:bg-zinc-700 rounded-xl">
    <PersonalIcon />
  </a>
  <button class="mx-2 px-2 py-2 hover:bg-zinc-700 rounded-xl">
    <MoonIcon />
  </button>
</header>

<script>
const $button = document.querySelector('button');
const $body = document.querySelector('body');

const moon = `<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-moon" width="38" height="38" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ffffff" fill="none" stroke-linecap="round" stroke-linejoin="round">
<path stroke="none" d="M0 0h24v24H0z" fill="none"/>
<path d="M12 3c.132 0 .263 0 .393 0a7.5 7.5 0 0 0 7.92 12.446a9 9 0 1 1 -8.313 -12.454z" />
</svg>`;
const sun = `<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-sun-high" width="38" height="38" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ffffff" fill="none" stroke-linecap="round" stroke-linejoin="round">
<path stroke="none" d="M0 0h24v24H0z" fill="none"/>
<path d="M14.828 14.828a4 4 0 1 0 -5.656 -5.656a4 4 0 0 0 5.656 5.656z" />
<path d="M6.343 17.657l-1.414 1.414" />
<path d="M6.343 6.343l-1.414 -1.414" />
<path d="M17.657 6.343l1.414 -1.414" />
<path d="M17.657 17.657l1.414 1.414" />
<path d="M4 12h-2" />
<path d="M12 4v-2" />
<path d="M20 12h2" />
<path d="M12 20v2" />
</svg>`;

const light = () => {
  $button.innerHTML = sun;
}

const dark = () => {
  $button.innerHTML = moon;
}

let darkMode = localStorage.getItem('darkMode') === 'true';

const setTheme = (darkMode) => {
  if (darkMode) {
    $body.classList.add('dark');
    light();
  } else {
    $body.classList.remove('dark');
    dark();
  }
}

setTheme(darkMode);

$button.addEventListener('click', () => {
  darkMode = !darkMode;
  $body.style.transition = 'background-color 0.5s';
  localStorage.setItem('darkMode', darkMode.toString());
  setTheme(darkMode);
});

window.addEventListener('popstate', () => {
  darkMode = localStorage.getItem('darkMode') === 'true';
  setTheme(darkMode);
});

</script>